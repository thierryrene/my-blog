{% embed 'partials/base.html.twig' %}

  {% block content %}
    {% if config.plugins.breadcrumbs.enabled and not (grav.uri.param('summaryonly')) %}
      {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div class="blog-content-item grid pure-g-r">
        {% if not (page.parent.header.hide_sidebar) %}
          <div id="item" class="block pure-u-2-3 h-entry">
        {% else %}
          <div id="item" class="block pure-u-3-3 h-entry">
        {% endif %}
          {% include 'partials/blog_item.html.twig' with {'blog': page.parent, 'truncate': false} %}
        </div>

      {# check content display flag - hibbittsdesign.org #}
      {% if not(grav.uri.param('chromeless')) and (not theme_config.chromeless.enabled) %}

        {% if not (page.parent.header.hide_sidebar) %}
          <div id="sidebar" class="block size-1-3 pure-u-1-3">
            {% include 'partials/sidebar.html.twig' with {'blog':page.parent}%}
          </div>
        {% endif %}

      {% endif %}

    </div>
  {% endblock %}

{% endembed %}
